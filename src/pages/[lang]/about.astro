---
import ExperienceItem from "../../components/experience-item.astro";
import PageHeading from "../../components/page-heading.astro";
import experiences from "../../data/experiences.json";
import Layout from "../../layouts/main.astro";
import addLangPaths from "../../lib/utils/add-lang-paths";

export function getStaticPaths() {
  return addLangPaths();
}
---

<Layout title="About Me">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="About Me"
      description="Hello 👋 I'm a Computer Science graduate from Cuba. I'm passionate about building new products and learning new technology."
    />

    <img
      src="/assets/images/dev-banner.webp"
      class="relative z-30 w-full my-10 rounded-xl"
    />

    <h2 class="mb-2 text-2xl font-bold dark:text-neutral-200">Short Bio</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg">
      Back-end cutter 🧑🏻‍💻, front-end amateur 🤷🏻‍♂️, operations digging holes person
      🤦🏻‍♂️.
    </p>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200">
      Experience
    </h2>
    <div class="px-5 py-10">
      {
        experiences.map((experience) => {
          return (
            <>
              <div class="pb-10 border-l border-gray-200 dark:border-neutral-700">
                <ExperienceItem
                  startDate={experience.startDate}
                  endDate={experience.endDate}
                  role={experience.role.english}
                  institution={experience.institution.english}
                  url={experience.url}
                  description={experience.description.english}
                  logo={experience.logo}
                  tags={experience.tags.english}
                />
              </div>
            </>
          );
        })
      }
    </div>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200">
      Let's Connect
    </h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg">
      If you want to stay up to date with my work be sure to <a
        href="https://x.com/leynier41"
        target="_blank"
        class="text-indigo-600 underline"
        >follow me on 𝕏</a
      >, or you can send me an <a
        href="mailto:leynier41@gmail.com"
        class="text-indigo-600 underline"
        >email</a
      > and I'll be sure to get back to you.
    </p>
  </section>
</Layout>
