---
import projects from "../../data/projects.json";
import Button from "../button.astro";
import Project from "../project.astro";
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    Highlighted Projects
  </h2>
  <div
    class="grid items-stretch w-full grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-7 mt-7"
  >
    {
      projects
        .filter((project) => project.highlighted)
        .map((project) => {
          return (
            <Project
              slug={project.slug}
              title={project.title.english}
              subtitle={project.subtitle.english}
              image={project.image}
            />
          );
        })
    }
  </div>

  <div class="flex items-center justify-center w-full py-5">
    <Button text="All Projects" link="/projects" />
  </div>
</section>
